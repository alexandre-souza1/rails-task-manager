<h1>All Tasks:</h1>

<ul id="tasks">
  <% @tasks.each do |task| %>
    <li>
        <% if task.completed? %>
          <i class="fa-regular fa-square-check"></i>
        <% else %>
          <i class="fa-regular fa-square"></i>
        <% end %>
        <%= link_to  task.title, task_path(task) %> -
        <%= link_to  edit_task_path(task) do %> <i class="fa-solid fa-pen-to-square"></i> <% end %>
        <%= link_to task_path(task.id), data: {turbo_method: :delete, turbo_confirm: "Delete #{task.title}?"} do %>
            <i class="fa-regular fa-trash-can"></i></li>
        <% end %>
  <% end %>
</ul>

<%= link_to new_task_path do %>
<i class="fa-solid fa-plus"></i> Add a new task
  <% end %>
